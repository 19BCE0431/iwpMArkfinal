<body>


    

    {{!-- Contact Form --}}
    <div id="servicebook" >
        
          
                    <h5 class="modal-title" id="exampleModalLabel">Book a service</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                
                <div class="modal-body">
                    <form id="bookService" action="/services" method="post">
                        <div class="form-group">
                            <label class="col-form-label">Name</label>
                            <input type="text" class="form-control" id="username" name="customerName" placeholder="John">
                        </div>

                        <div class="form-group">
                            <label>Email address</label>
                            <input type="email" class="form-control" id="useremail" name="customerEmail" placeholder="name@gmail.com">
                        </div>

                        <div class="form-group">
                            <label>Phone</label>
                            <input type="tel" class="form-control" id="userphone" name="customerPhone" placeholder="9381046426"
                                pattern="[0-9]{10}" required>
                        </div>

                         <button type="submit" id="contactSubmit" class="btn btn-secondary">Submit</button>
                        

                       
                    </form>
                </div>
                
                    
                   
                
    </div>







